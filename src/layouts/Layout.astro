---
import "../styles/global.css";
import "../styles/snaick-theme.css";
import { Toaster } from "../components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "SnAIck - Zdrowe przekąski dopasowane do Ciebie" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="SnAIck - aplikacja wykorzystująca sztuczną inteligencję do proponowania zdrowych przekąsek dopasowanych do Twoich preferencji i diety."
    />
    <meta
      name="keywords"
      content="zdrowe przekąski, przekąski, dieta, AI, sztuczna inteligencja, odżywianie, personalizacja, zdrowie"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="SnAIck - aplikacja wykorzystująca sztuczną inteligencję do proponowania zdrowych przekąsek dopasowanych do Twoich preferencji i diety."
    />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
