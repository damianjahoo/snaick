---
// Footer component for SnAIck application
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<footer class={`py-8 px-4 sm:px-6 lg:px-8 border-t border-white/10 bg-black/20 ${className}`}>
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center">
    <div class="mb-4 md:mb-0">
      <a
        href="/"
        class="text-lg font-bold bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text"
        >SnAIck</a
      >
      <p class="text-sm text-blue-100/60 mt-1">© {new Date().getFullYear()} SnAIck. Wszystkie prawa zastrzeżone.</p>
    </div>
  </div>
</footer>
